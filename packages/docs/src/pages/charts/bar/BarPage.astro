---
import Page from "../Page.astro";
const links = ["chartjs-basic", "highchart-basic", "nivo-basic", "rechart-custom-shape"].map(
  (link) => ({
    label: link,
    href: `/charts/bar/${link}`,
  })
);
const [{ Content }] = await Astro.glob("/src/content/charts/bar.mdx");
---

<Page links={links}>
  <div slot="description" class="prose contents">
    <Content slot="description" />
  </div>
  <slot name="chart" slot="chart" />
  <slot name="code" slot="code" />
</Page>
