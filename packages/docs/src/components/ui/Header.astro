---
const url = new URL(Astro.request.url);
const pathname = url.pathname; 

let current: "docs" | "charts" | "i18n" | "none" = pathname.startsWith("/docs")
  ? "docs"
  : pathname.startsWith("/charts")
    ? "charts"
    : pathname.startsWith("/i18n")
      ? "i18n"
      : "none";
---

<header class="header-container neu-header">
  <div class="header-inner">
    <a href="/" class="logo-area">
      <img class="logo-img scale-150" src="/logo.png" alt="logo" />
      <span class="logo-text">Headless Chart</span>
    </a>

    <nav class="nav">
      <a
        class={`nav-link ${current === "docs" ? "active" : ""}`}
        href="/docs"
      >docs</a>
      <a
        class={`nav-link ${current === "charts" ? "active" : ""}`}
        href="/charts"
      >charts</a>
      <a
        class={`nav-link ${current === "i18n" ? "active" : ""}`}
        href="/i18n"
      >i18n</a>
    </nav>

    <div class="external-links">
      <a href="https://github.com/meursyphus/headless-chart">
        <img class="icon" src="/github-mark.png" alt="GitHub" />
      </a>
      <a href="https://discord.gg/kUZp4SaHzF">
        <img class="icon" src="/discord.png" alt="Discord" />
      </a>
    </div>
  </div>
</header>

<style>
  .header-container {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 64px;
    z-index: 100;
    background: rgba(26, 26, 46, 0.85);
    backdrop-filter: blur(12px);
    -webkit-backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border-color);
  }

  .header-inner {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1280px;
    margin: 0 auto;
    height: 100%;
    padding: 0 1rem;
  }

  .logo-area {
    display: flex;
    align-items: center;
    height: 100%;
    gap: 0.5rem;
    text-decoration: none;
  }

  .logo-img {
    width: 32px;
    height: 32px;
  }

  .logo-text {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--neu-text);
  }

  .nav {
    position: absolute;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    display: flex;
    gap: 0.5rem;
  }

  .nav-link {
    color: var(--neu-text-secondary);
    text-decoration: none;
    font-size: 0.9375rem;
    font-weight: 500;
    padding: 0.5rem 1rem;
    border-radius: 8px;
    transition: all 0.2s ease;
    background: transparent;
  }

  .nav-link:hover {
    color: var(--neu-text);
    background: rgba(255, 255, 255, 0.06);
  }

  .nav-link.active {
    color: var(--neu-accent);
    background: rgba(97, 218, 251, 0.1);
    font-weight: 600;
  }

  .external-links {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .icon {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    object-fit: contain;
    transition: all 0.2s ease;
    opacity: 0.6;
    filter: brightness(0) invert(1);
  }

  .icon:hover {
    transform: scale(1.1);
    opacity: 1;
  }

  @media (max-width: 768px) {
    .header-container {
      height: 56px;
    }

    .logo-text {
      display: none;
    }

    .logo-img {
      width: 28px;
      height: 28px;
    }

    .nav {
      gap: 0.25rem;
    }

    .nav-link {
      font-size: 0.875rem;
      padding: 0.375rem 0.75rem;
    }

    .external-links {
      gap: 0.75rem;
    }

    .icon {
      width: 20px;
      height: 20px;
    }
  }
</style>