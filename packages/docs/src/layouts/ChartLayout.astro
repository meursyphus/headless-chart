---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <Header />
  <div class="flex relative pt-[60px]" role="presentation">
    <aside class="w-[60px] shrink-0 pt-2 overflow-y-scroll fixed-screen">
      <nav class="w-full pl-2">
        <a href="/charts/bar/chartjs-basic" class="box block bg-red-200">Bar</a>
      </nav>
    </aside>
    <main class="grid grid-cols-[3fr_4fr] w-full">
      <section class="min-w-[300px] flex flex-col">
        <slot name="description" />
      </section>
      <section class="fixed-screen min-w-[400px]">
        <slot name="presentation" />
      </section>
    </main>
  </div>
</Layout>

<style>
  .box {
    width: 100%;
    aspect-ratio: 1/1;
    flex-shrink: 0;
  }
  aside {
    scrollbar-width: thin; /* Firefox */
    scrollbar-color: #4caf50 transparent; /* Firefox */
  }

  aside::-webkit-scrollbar {
    width: 4px; /* WebKit browsers */
  }

  aside::-webkit-scrollbar-track {
    background: transparent;
  }

  aside::-webkit-scrollbar-thumb {
    background-color: #4caf50;
    border-radius: 20px;
  }

  .fixed-screen {
    position: sticky;
    height: calc(100vh - 60px);
    top: 60px;
  }
</style>
