---
import Layout from "./Layout.astro";
import Header from "../components/Header.astro";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<Layout title={title}>
  <Header />
  <div class="flex relative pt-[60px]" role="presentation">
    <aside
      class="w-[60px] shrink-0 bg-green-500 overflow-y-scroll fixed-screen"
    >
      hi
    </aside>
    <main class="grid grid-cols-[3fr_4fr] w-full">
      <section class="h-[3000px] bg-blue-200 min-w-[300px]">
        <slot name="description" />
      </section>
      <section class="fixed-screen bg-slate-500 min-w-[400px]">
        <slot name="presentation" />
      </section>
    </main>
  </div>
</Layout>

<style>
  aside {
    scrollbar-width: thin; /* Firefox */
    scrollbar-color: #4caf50 #e0e0e0; /* Firefox */
  }

  aside::-webkit-scrollbar {
    width: 4px; /* WebKit browsers */
  }

  aside::-webkit-scrollbar-track {
    background: #e0e0e0;
  }

  aside::-webkit-scrollbar-thumb {
    background-color: #4caf50;
    border-radius: 20px;
  }

  .fixed-screen {
    position: sticky;
    height: calc(100vh - 60px);
    top: 60px;
  }
</style>
