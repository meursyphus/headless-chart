---
import Header from "../components/ui/Header.astro";
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  image = "/og.png",
  title = "Headless Charts - ğŸ˜« Tired of Chart Limitations? ğŸ¯",
  description = "âœ¨ Copy, Paste, Done! ğŸ¨ Ultimate Freedom in Chart Customization ğŸš€ Zero Restrictions",
} = Astro.props;

const BASE_ORIGIN = Astro.url.origin;
const fullCanonicalUrl = `${BASE_ORIGIN}${Astro.url.pathname}`;

---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={fullCanonicalUrl} />
  <link rel="icon" type="image/svg+xml" href="/favicon.png" />
  
  <!-- SEO Meta -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={fullCanonicalUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, BASE_ORIGIN)} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={fullCanonicalUrl} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, BASE_ORIGIN)} />

  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    rel="stylesheet"
  />
</head>
<body>
  <Header />

  <main class="layout">
    <slot />
  </main>
</body>
</html>

<style is:global>
:root {
  --header: 64px; /* í—¤ë” ë†’ì´ */
  --px: 64px; /* ì¢Œìš° íŒ¨ë”© */
  
  /* Neumorphic Design System */
  --neu-bg: #e6e7ee;
  --neu-bg-alt: #f0f0f3;
  --neu-text: #31344b;
  --neu-text-secondary: #44476a;
  --neu-accent: #7b61ff;
  --neu-accent-light: #9d8bff;
  
  /* Neumorphic Shadows */
  --neu-shadow-light: #ffffff;
  --neu-shadow-dark: #c8cad0;
  --neu-shadow-inset-light: #ffffff;
  --neu-shadow-inset-dark: #a3a5aa;
  
  /* Shadow Values */
  --neu-shadow-sm: 
    6px 6px 12px var(--neu-shadow-dark),
    -6px -6px 12px var(--neu-shadow-light);
  --neu-shadow-md: 
    12px 12px 24px var(--neu-shadow-dark),
    -12px -12px 24px var(--neu-shadow-light);
  --neu-shadow-lg: 
    20px 20px 40px var(--neu-shadow-dark),
    -20px -20px 40px var(--neu-shadow-light);
  --neu-shadow-inset: 
    inset 6px 6px 12px var(--neu-shadow-inset-dark),
    inset -6px -6px 12px var(--neu-shadow-inset-light);
}

html, body {
  margin:0; padding:0;
  font-family: 'Inter', sans-serif;
  color: var(--neu-text);
  min-height: 100vh;
  overflow-x: hidden;
  overflow-y: scroll;
}

body {
  background: var(--neu-bg);
  background-image: 
    radial-gradient(ellipse at top left, rgba(123, 97, 255, 0.03) 0%, transparent 50%),
    radial-gradient(ellipse at bottom right, rgba(123, 97, 255, 0.02) 0%, transparent 50%);
}

.layout {
  display: flex;
  flex-direction: column;
  max-width: 1920px;
  margin: 0 auto;
  min-height: 100vh;
  padding-top: var(--header);

}

::-webkit-scrollbar {
  width: 8px;
}
::-webkit-scrollbar-track {
  background: transparent;
}
::-webkit-scrollbar-thumb {
  background-color: rgba(0, 0, 0, 0.1);
  border-radius: 20px;
  border: 2px solid transparent;
}
::-webkit-scrollbar-thumb:hover {
  background-color: rgba(0, 0, 0, 0.15);
}

.glass {
  background: rgba(230, 231, 238, 0.6);
  backdrop-filter: blur(10px);
  -webkit-backdrop-filter: blur(10px);
  border: 1px solid rgba(255, 255, 255, 0.18);
  border-radius: 12px;
}

/* Neumorphic Components */
.neu-card {
  background: var(--neu-bg);
  border-radius: 20px;
  box-shadow: var(--neu-shadow-md);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.neu-card:hover {
  box-shadow: var(--neu-shadow-sm);
}

.neu-button {
  background: var(--neu-bg);
  border: none;
  border-radius: 12px;
  padding: 12px 24px;
  color: var(--neu-text);
  font-weight: 500;
  box-shadow: var(--neu-shadow-sm);
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.neu-button:hover {
  box-shadow: var(--neu-shadow-md);
  transform: translateY(-2px);
}

.neu-button:active {
  box-shadow: var(--neu-shadow-inset);
  transform: translateY(0);
}

.neu-inset {
  background: var(--neu-bg);
  border-radius: 12px;
  box-shadow: var(--neu-shadow-inset);
}

/* Gradient Text */
.gradient-text {
  background: linear-gradient(135deg, var(--neu-accent) 0%, var(--neu-accent-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
</style>