---
import Header from "../components/ui/Header.astro";
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  image = "/og.png",
  title = "Headless Charts - ðŸ˜« Tired of Chart Limitations? ðŸŽ¯",
  description = "âœ¨ Copy, Paste, Done! ðŸŽ¨ Ultimate Freedom in Chart Customization ðŸš€ Zero Restrictions",
} = Astro.props;

const BASE_ORIGIN = Astro.url.origin;
const fullCanonicalUrl = `${BASE_ORIGIN}${Astro.url.pathname}`;

---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title}</title>
  <meta name="description" content={description} />
  <link rel="canonical" href={fullCanonicalUrl} />
  <link rel="icon" type="image/svg+xml" href="/favicon.png" />
  
  <!-- SEO Meta -->
  <meta property="og:type" content="website" />
  <meta property="og:url" content={fullCanonicalUrl} />
  <meta property="og:title" content={title} />
  <meta property="og:description" content={description} />
  <meta property="og:image" content={new URL(image, BASE_ORIGIN)} />

  <meta name="twitter:card" content="summary_large_image" />
  <meta name="twitter:url" content={fullCanonicalUrl} />
  <meta name="twitter:title" content={title} />
  <meta name="twitter:description" content={description} />
  <meta name="twitter:image" content={new URL(image, BASE_ORIGIN)} />

  <link
    href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
    rel="stylesheet"
  />
</head>
<body>
  <Header />

  <main class="layout">
    <slot />
  </main>
</body>
</html>

<style is:global>
:root {
  --header: 64px;
  --px: 64px;

  /* Dark Theme Design System */
  --neu-bg: #1a1a2e;
  --neu-bg-alt: #16213e;
  --neu-text: #e2e8f0;
  --neu-text-secondary: #94a3b8;
  --neu-accent: #61dafb;
  --neu-accent-light: #a78bfa;

  /* Surface colors */
  --surface-1: #0f3460;
  --surface-2: #1a1a2e;
  --surface-3: #16213e;
  --border-color: rgba(97, 218, 251, 0.12);
  --border-color-hover: rgba(97, 218, 251, 0.25);

  /* Shadows for dark theme */
  --neu-shadow-dark: rgba(0, 0, 0, 0.4);
  --neu-shadow-sm: 0 2px 8px rgba(0, 0, 0, 0.3);
  --neu-shadow-md: 0 4px 16px rgba(0, 0, 0, 0.3);
  --neu-shadow-lg: 0 8px 32px rgba(0, 0, 0, 0.4);
  --neu-shadow-inset: inset 0 2px 4px rgba(0, 0, 0, 0.3);

  /* Glow effects */
  --glow-accent: 0 0 20px rgba(97, 218, 251, 0.15);
  --glow-purple: 0 0 20px rgba(167, 139, 250, 0.15);
}

html, body {
  margin: 0;
  padding: 0;
  font-family: 'Inter', sans-serif;
  color: var(--neu-text);
  min-height: 100vh;
  overflow-x: hidden;
  overflow-y: scroll;
}

body {
  background: var(--neu-bg);
  background-image:
    radial-gradient(ellipse at top left, rgba(97, 218, 251, 0.04) 0%, transparent 50%),
    radial-gradient(ellipse at bottom right, rgba(167, 139, 250, 0.04) 0%, transparent 50%);
}

.layout {
  display: flex;
  flex-direction: column;
  max-width: 1920px;
  margin: 0 auto;
  min-height: 100vh;
  padding-top: var(--header);
}

::-webkit-scrollbar {
  width: 8px;
}
::-webkit-scrollbar-track {
  background: transparent;
}
::-webkit-scrollbar-thumb {
  background-color: rgba(255, 255, 255, 0.1);
  border-radius: 20px;
  border: 2px solid transparent;
}
::-webkit-scrollbar-thumb:hover {
  background-color: rgba(255, 255, 255, 0.18);
}

.glass {
  background: rgba(22, 33, 62, 0.7);
  backdrop-filter: blur(12px);
  -webkit-backdrop-filter: blur(12px);
  border: 1px solid var(--border-color);
  border-radius: 12px;
}

/* Card Components */
.neu-card {
  background: var(--neu-bg-alt);
  border-radius: 16px;
  border: 1px solid var(--border-color);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.neu-card:hover {
  border-color: var(--border-color-hover);
}

.neu-button {
  background: var(--neu-bg-alt);
  border: 1px solid var(--border-color);
  border-radius: 10px;
  padding: 12px 24px;
  color: var(--neu-text);
  font-weight: 500;
  transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  cursor: pointer;
}

.neu-button:hover {
  border-color: var(--border-color-hover);
  background: var(--surface-1);
  transform: translateY(-1px);
}

.neu-button:active {
  transform: translateY(0);
  background: var(--surface-3);
}

.neu-inset {
  background: rgba(15, 52, 96, 0.4);
  border-radius: 10px;
  border: 1px solid var(--border-color);
}

/* Gradient Text */
.gradient-text {
  background: linear-gradient(135deg, var(--neu-accent) 0%, var(--neu-accent-light) 100%);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
}
</style>