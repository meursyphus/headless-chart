---
import Header from "../components/ui/Header.astro";
interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  image = "/og.png",
  title = "Flitter - Say Goodbye to Chart Libraries, Hello to Freedom!",
  description = "ğŸ”¥ No more limits. ğŸ¨ Declare, render, and customize your way. ğŸ–Œï¸ SVG or Canvas, your rules. ğŸš€ Built for high-performance visualizations.",
} = Astro.props;

// Set the base URL for canonical links
const BASE_ORIGIN = Astro.url.origin; // TODO: change to site url
const fullCanonicalUrl = `${BASE_ORIGIN}${Astro.url.pathname}`;
---

<!doctype html>
<html lang="en">
  <head>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.jpeg" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.cdnfonts.com/css/helvetica-neue-55"
      rel="stylesheet"
    />
    <title>{title}</title>

    <!-- SEO -->
    <meta name="description" content={description} />
    <link rel="canonical" href={fullCanonicalUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={fullCanonicalUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, BASE_ORIGIN)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={fullCanonicalUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, BASE_ORIGIN)} />

    <!-- LinkedIn -->
    <meta property="og:site_name" content="Flitter" />
    <meta name="linkedin:title" content={title} />
    <meta name="linkedin:description" content={description} />
    <meta name="linkedin:image" content={new URL(image, BASE_ORIGIN)} />

    <!-- Pinterest -->
    <meta name="pinterest:title" content={title} />
    <meta name="pinterest:description" content={description} />
    <meta name="pinterest:image" content={new URL(image, BASE_ORIGIN)} />

    <!-- Google tag (gtag.js) -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-DY0NVVYBLS"
    ></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-DY0NVVYBLS");
    </script>
  </head>
  <body>
    <Header />
    <div class="layout">
      <slot />
    </div>
    <slot name="footer" />
  </body>
</html>

<style is:global>
  html,
  body {
    padding: 0 !important;
    margin: 0 !important;
  }
  body {
    font-family: Helvetica, sans-serif;
    background: #121212 !important;
    color: white !important;
    --header: 64px;
    overflow-y: scroll;
    --px: 64px;
    --mw: 1920px;
  }
  .layout {
    display: flex;
    flex-direction: column;
  }
  @media (max-width: 768px) {
    body {
      --header: 64px;
      --px: 24px;
    }
  }
  /* Chrome, Edge, Safariì—ì„œ ìŠ¤í¬ë¡¤ë°” ìŠ¤íƒ€ì¼ë§ */
